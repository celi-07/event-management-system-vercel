{
  "version": 2,
  "public": true,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.2" 
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "VIEW_COMPILED_PATH": "/tmp/storage/framework/views"
  }
}